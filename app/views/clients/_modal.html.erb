<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [@mentor,@client] ,remote: true do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">登録情報</h4>
      </div>
      <div class="modal-body">
        <div class="field">
          <label for="recipient-name" class="col-form-label">名前: <span class="badge badge-pill badge-danger">必須</span></label>
          <%= f.text_field :name, id: "recipient-name", class: "form-control" %><br>
        </div>
        <div class="field">
          <label for="recipient-name" class="col-form-label">受講期: <span class="badge badge-pill badge-danger">必須</span></label>
          <%= f.number_field :period, id: "recipient-name", class: "form-control" %><br>
        </div>
        <div class="field">
          <label for="recipient-name" class="col-form-label">拠点名: <span class="badge badge-pill badge-danger">必須</span></label><br>
          <%= f.select :locate, [["渋谷校", "渋谷校"], ["東京駅前校", "東京駅前校"],  ["池袋校", "池袋校"], ["新宿校", "新宿校"],["梅田校", "梅田校"],["名古屋校", "名古屋校"],["リモート校", "リモート校"]], :prompt => "選択してください" %>
        </div>
        <div class="field">
          <label for="recipient-name" class="col-form-label">管理者ページ:</label>
          <%= f.text_field :url, id: "recipient-name", class: "form-control" %><br>
        </div>
        <div class="field">
          <label for="recipient-name" class="col-form-label">進捗表:</label>
          <%= f.text_field :progresstable, id: "recipient-name", class: "form-control" %><br>
        </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit '登録する',  class: "btn btn-primary"%>
        </div>
    <% end %>
  </div>
</div>

