<% @clients.each do |client| %>
  <tr>
    <th><%= client.name %></th>
    <th><%= client.period %></th>
    <th><%= client.locate %></th>
    <th><%= link_to "管理者ページ", "#{client.url}", target: :_blank%></th>
    <th><%= link_to "進捗表", "#{client.progresstable}", target: :_blank%></th>
    <th><%= link_to "編集", "/mentors/#{@mentor.id}/clients/#{client.id}/edit", remote: true %></th>
    <th><%= link_to "削除", "/mentors/#{@mentor.id}/clients/#{client.id}", method: :delete, remote: true %></th>
    <th><%= link_to "面談記録", "/mentors/#{@mentor.id}/clients/#{client.id}" %></th>
  </tr>
<% end %>  